{
  "include": ["cli"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "target": "es6",
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true
  }
}
