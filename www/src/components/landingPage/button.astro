---
export interface Props {
  href?: string;
  openInNewTab?: boolean;
  rounded?: "full" | "md" | "none";
  variant?: "primary" | "secondary";
  className?: string;
}

const {
  href = "",
  rounded = "md",
  variant = "primary",
  openInNewTab = false,
  className = "",
} = Astro.props;

const roundedClass =
  rounded === "full" ? "rounded-full" : rounded === "md" ? "rounded-md" : "";
const variantClass =
  variant === "primary"
    ? "bg-t3-purple-100 hover:bg-t3-purple-200 text-slate-800"
    : "bg-white/10 hover:bg-white/20 text-white";
---

<a
  href={href}
  target={openInNewTab ? "_blank" : "_self"}
  rel="noopener noreferrer"
  class={`${roundedClass} ${variantClass} ${className} inline-flex items-center px-5 py-3 font-semibold cursor-pointer hover:no-underline transition-colors`}
>
  <slot />
</a>
