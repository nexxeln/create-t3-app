---
import clsx from "clsx";
import { SIDEBAR } from "../../config";
import Search from "./Search";

export interface Props {
  currentPage: string;
}

const { currentPage } = Astro.props;
const isLanding = currentPage === "/";
const currentPageMatch = currentPage.slice(1);
const langCode = "en";
const sidebar = SIDEBAR[langCode];
---

<nav
  aria-labelledby="grid-left"
  class={clsx({
    "pt-3": isLanding,
    "pt-16": !isLanding,
    "md:overflow-hidden": !isLanding,
  })}
>
  <div class="w-full mx-auto px-8 md:hidden">
    <Search client:idle />
  </div>
  <ul
    class="px-8 pt-8 h-screen overflow-x-visible overflow-y-scroll t3-scrollbar sm:overflow-auto dark:text-t3-purple-50 text-slate-900"
  >
    {
      Object.entries(sidebar).map(([header, children]) => (
        <li>
          <div>
            <h2
              class={clsx("text-xl sm:text-lg font-semibold py-2", {
                // mobile menu on landing page
                "text-slate-50": isLanding,
              })}
            >
              {header}
            </h2>
            <ul>
              {children.map((child) => {
                const url = Astro.site?.pathname + child.link;
                const isActive = currentPageMatch === child.link;
                return (
                  <li>
                    <a
                      href={url}
                      aria-current={isActive ? "page" : false}
                      class={clsx(
                        "text-t3-purple-400 dark:text-t3-purple-200 transition-colors block py-2 pl-4 border-l hover:text-t3-purple-400 dark:hover:text-t3-purple-100 text-lg hover:border-t3-purple-300/50",
                        {
                          "font-bold": isActive,
                          "border-t3-purple-300": isActive,
                          "border-t3-purple-300/20": !isActive,
                        },
                      )}
                    >
                      {child.text}
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>
        </li>
      ))
    }
  </ul>
</nav>
